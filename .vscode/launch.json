{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch C++ Program",
            "type": "cppdbg",
            "request": "launch",

            // Automatically runs the correct .exe for the current file
            "program": "${fileDirname}/${fileBasenameNoExtension}.exe",

            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": true,

            "MIMode": "gdb",

            // MSYS2 UCRT64 gdb
            "miDebuggerPath": "F:/mysys/ucrt64/bin/gdb.exe",

            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
